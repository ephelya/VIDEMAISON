<div id="smoothChart" class="Chart"></div>
<a href="https://codepen.io/amcharts/pen/azpbWp">curves lines</a>
<script src="https://www.amcharts.com/lib/3/amcharts.js"></script>
<script src="https://www.amcharts.com/lib/3/serial.js"></script>
<script src="https://www.amcharts.com/lib/3/themes/light.js"></script>
<script>
AmCharts.makeChart("smoothChart", {
    "type": "serial",
    "theme": "light",
    "marginTop": 0,
    "marginRight": 20,
    "dataProvider": [
        {"date": "2001", "column-1": 8, "column-2": 5, "column-3": 3},
        {"date": "2002", "column-1": 6, "column-2": 7, "column-3": 3},
        {"date": "2003", "column-1": 2, "column-2": 3, "column-3": 6},
        {"date": "2004", "column-1": 4, "column-2": 3, "column-3": 1},
        {"date": "2005", "column-1": 2, "column-2": 1, "column-3": 3},
        {"date": "2006", "column-1": 3, "column-2": 2, "column-3": 1},
        {"date": "2007", "column-1": 4, "column-2": 8, "column-3": 6}
    ],
    "valueAxes": [{
        "axisAlpha": 0,
        "position": "left"
    }],
    "graphs": [
        {
            "id": "g1",
            "balloonText": "[[title]] of [[category]]:[[value]]",
            "bullet": "round",
            "bulletBorderAlpha": 1,
            "bulletColor": "#FFFFFF",
            "hideBulletsCount": 50,
            "title": "Documents",
            "valueField": "column-1",
            "useLineColorForBulletBorder": true,
            "balloon":{
                "drop": true
            }
        },
        {
            "id": "g2",
            "balloonText": "[[title]] of [[category]]:[[value]]",
            "bullet": "square",
            "bulletBorderAlpha": 1,
            "bulletColor": "#FFFFFF",
            "hideBulletsCount": 50,
            "title": "Accounts",
            "valueField": "column-2",
            "useLineColorForBulletBorder": true,
            "balloon":{
                "drop": true
            }
        }
    ],
    "chartCursor": {
        "cursorPosition": "mouse"
    },
    "categoryField": "date",
    "categoryAxis": {
        "parseDates": true,
        "axisColor": "#DADADA",
        "minorGridEnabled": true
    },
    "export": {
        "enabled": true
    }
});
</script>
